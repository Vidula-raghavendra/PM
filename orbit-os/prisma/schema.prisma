// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User & Profile
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("USER") // ADMIN, USER
  avatarUrl String?

  // Profile Fields
  phone     String?
  gender    String?
  sector    String?
  purpose   String?

  // Relations
  projects      Project[]       @relation("OwnerProjects")
  collaboration Collaborator[]
  timeLogs      TimeLog[]
  goals         Goal[]
  events        Event[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Project Engine
model Project {
  id          String   @id @default(uuid())
  title       String
  description String?
  client      String?
  status      String   @default("ACTIVE") // ACTIVE, COMPLETED, ARCHIVED
  startDate   DateTime?
  endDate     DateTime?
  
  // Financials
  totalBudget Float?   @default(0)
  currency    String   @default("INR")

  ownerId     String
  owner       User     @relation("OwnerProjects", fields: [ownerId], references: [id])

  // Relations
  collaborators Collaborator[]
  milestones    Milestone[]
  tasks         Task[]
  timeLogs      TimeLog[]
  documents     Document[]
  events        Event[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Collaboration Engine
model Collaborator {
  id        String @id @default(uuid())
  
  userId    String
  user      User   @relation(fields: [userId], references: [id])
  
  projectId String
  project   Project @relation(fields: [projectId], references: [id])
  
  role            String @default("MEMBER")
  color           String @default("#3b82f6") // Default blue
  splitPercentage Float  @default(0) // 0-100

  joinedAt  DateTime @default(now())

  @@unique([userId, projectId])
}

// Financial Engine
model Milestone {
  id          String   @id @default(uuid())
  title       String
  amount      Float
  percentage  Float    @default(0) // % of total budget
  status      String   @default("PENDING") // PENDING, PAID, OVERDUE
  
  startDate   DateTime?
  dueDate     DateTime? // End Date
  
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Task & Time Engine
model Task {
  id          String   @id @default(uuid())
  title       String
  status      String   @default("TODO") // TODO, IN_PROGRESS, DONE
  priority    String   @default("MEDIUM")
  dueDate     DateTime?

  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TimeLog {
  id          String   @id @default(uuid())
  startTime   DateTime
  endTime     DateTime?
  duration    Int?     // in minutes
  description String?
  
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Calendar Engine
model Event {
  id          String   @id @default(uuid())
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  type        String   @default("MEETING") // MEETING, CALL, DEADLINE
  
  projectId   String?
  project     Project? @relation(fields: [projectId], references: [id])
  
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Goals Engine
model Goal {
  id          String   @id @default(uuid())
  title       String
  description String?
  targetDate  DateTime?
  status      String   @default("IN_PROGRESS") // IN_PROGRESS, ACHIEVED, FAILED
  
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Documents
model Document {
  id          String   @id @default(uuid())
  title       String
  url         String
  type        String   // CONTRACT, INVOICE, OTHER

  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
